<table class="billTable">
	<tr>
		<td>Sub Division Name</td>
		<td>{{data.subDivision}}</td>
		<td> Bill Number </td>
		<td>  {{data.bill.id}}</td>
	</tr>
	<tr>
		<td>Consumer Id</td>
		<td>{{data.unitSummary.unitid}}</td>
		<td> RR Number </td>
		<td><span *ngIf="data.employee != null"> {{data.employee.rrnumber}}</span> </td>
	</tr>
	<tr>
		<td>Meter Reading Date</td>
		<td>{{data.bill.addedAt | date:'dd-MM-yyyy'}}</td>
		<td>Due Date of Payment  </td>
		<td> {{data.bill.dueDate| date:'dd-MM-yyyy'}} </td>
	</tr>
	<tr>
		<td>Consumer Name </td>
		<td>{{data.unitSummary.unitId}}</td>
		<td>Bore size</td>
		<td> {{data.unitSummary.pipesizenew}} </td>
	</tr>
	<tr>
		<td rowspan="3">Address </td>
		<td rowspan="3">{{data.unitSummary.unitId}}</td>
		<td>present Reading</td>
		<td> {{data.bill.lastReading }} </td>
	</tr>
	<tr>
		<td>Previous Reading</td>
		<td> {{data.bill.firstReading}} </td>
	</tr>
	<tr>
		<td>Consumption in Lts</td>
		<td> {{data.bill.consumption}} </td>
	</tr>
<tr>
	<td colspan="4" style="align-content: center">
		<table>
			<tr>
				<td>Water Charges</td>
				<td> {{data.bill.waterCharge}}</td>
			</tr>
			<tr>
				<td>meter Charges</td>
				<td> {{data.bill.meterCharge}}</td>
			</tr>

			<tr>
				<td>Sanitary Charges</td>
				<td> {{data.bill.sanitaryCharge}}</td>
			</tr>

			<tr>
				<td>S C for Borewell</td>
				<td> {{data.bill.borewellCharge}}</td>
			</tr>

			<tr>
				<td>Other  Charges</td>
				<td> {{data.bill.otherCharge}}</td>
			</tr>

			<tr>
				<td>Arrears</td>
				<td> {{data.bill.arrears}}</td>
			</tr>

			<tr>
				<td>Interest on Arrears</td>
				<td> {{data.bill.interestOnArrears}}</td>
			</tr>
			<tr>
				<td>Extra Paid</td>
				<td> {{data.bill.extraPaid}}</td>
			</tr>

			<tr>
				<td>Total Amount</td>
				<td> {{data.bill.totalAmount}}</td>
			</tr>
		</table>
	</td>
</tr>

</table>

