<app-title  title="Payment Entry"></app-title>
<div>
	<div>
			<app-paymentdetail (BillNoChange)="billNoChanged($event)" (Clear)="clear()"></app-paymentdetail>
		<div *ngIf="showAdd" class="col-sm-12 col-md-6 col-lg-6" >
			<div class="rec">
				<span class="lbl"> Mode Of Pay</span>
				<span>
					<select [(ngModel)]="modeOfPay">
						<option value="Cash"> Cash</option>
						<option value="Cheque"> Cheque</option>
						<option value="DD"> DD</option>
					</select>
					
				</span>

			</div>
		
			<div *ngIf="modeOfPay =='Cheque' || modeOfPay == 'DD'" >
				<div class="rec">
					<span class="lbl"> {{modeOfPay}} No. </span>
					<span> <input type="text" [(ngModel)] ="chequeNo"/></span>
				</div>	

				<div class="rec">
					<span class="lbl"> Bank Name </span>
					<span> <input type ="text" [(ngModel)]="bankName"/></span>
				</div>
				<div class="rec">
					<span class="lbl"> Branch Name</span>
					<span> <input type="text" [(ngModel)]="branchName"/> </span>
				</div>
				<div class="rec">
					<span class="lbl"> Address</span>
					<span> <input type="text" [(ngModel)]="bankAddress"/> </span>
				</div>
			</div>
			<div class="rec">
				<span class="lbl"> Amount </span>
					<span> <input type="number" [(ngModel)]="amount"/> </span>
				</div>
			<div>
				<button class="btn btn-primary" (click)="save()"> Save</button>

			</div>	
		</div>
	</div>
</div>